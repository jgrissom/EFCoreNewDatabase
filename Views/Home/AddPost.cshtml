@model EFCoreNewDatabase.Models.Post

<form method="post" asp-action="AddPost">
    <div asp-validation-summary="All"></div>
    <label asp-for="@Model.Title">Enter Title</label>
    <input asp-for="@Model.Title" placeholder="Post Title" /><br />
    <label asp-for="@Model.Content">Enter Content</label>
    <textarea asp-for="@Model.Content" placeholder="Post Content"></textarea><br />
    <button type="submit">Create</button>
</form>

<hr />
<a asp-action="Index">Home</a> | <a asp-action="BlogDetail" asp-route-id="@ViewBag.BlogId">Posts</a>
